<!-- res/layout/footer_host.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="10dp">

    <LinearLayout
        android:id="@+id/footer_host"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="2dp"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/button_property_manage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_property_manage"
            android:drawablePadding="4dp"
            android:drawableTint="@color/footer_icon_color"
            android:padding="8dp"
            android:text="Nhà ở"
            android:textAllCaps="false"
            android:textColor="@color/footer_button_text_color"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_booking_manage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_booking_manage"
            android:drawablePadding="4dp"
            android:drawableTint="@color/footer_icon_color"
            android:padding="8dp"
            android:text="Đặt phòng"
            android:textAllCaps="false"
            android:textColor="@color/footer_button_text_color"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_statistic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_statistic"
            android:drawablePadding="4dp"
            android:drawableTint="@color/footer_icon_color"
            android:padding="8dp"
            android:text="Thống kê"
            android:textAllCaps="false"
            android:textColor="@color/footer_button_text_color"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_message"
            android:drawablePadding="4dp"
            android:drawableTint="@color/footer_icon_color"
            android:padding="8dp"
            android:text="Tin nhắn"
            android:textAllCaps="false"
            android:textColor="@color/footer_button_text_color"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_person"
            android:drawablePadding="4dp"
            android:drawableTint="@color/footer_icon_color"
            android:padding="8dp"
            android:text="Hồ sơ"
            android:textAllCaps="false"
            android:textColor="@color/footer_button_text_color"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>